<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="20dp" android:id="@+id/tableLayout" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <Button
                    android:id="@+id/button7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

            <Button
                    android:id="@+id/button9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:onClick="select"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:typeface="normal"/>

        </TableRow>

    </TableLayout>
    <Button
            android:text="RESET"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/button10"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:onClick="resetBtnOnClick" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/tableLayout"/>
    <Button
            android:text="4EVER ALONE"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:id="@+id/button10" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/button" android:onClick="autoplayerBtnOnClick"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Score:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.045"
            android:textAlignment="center" android:textSize="24sp"/>
    <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/scoreP1"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/scoreP2" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="30sp" android:textAlignment="center" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/scoreText"
    />
    <TextView
            android:text="0"
            android:layout_height="50dp"
            android:id="@+id/scoreP2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:textSize="30sp" android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/scoreP1" android:layout_marginStart="8dp"
            android:textAlignment="center" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/scoreText"/>
    <TextView
            android:text="Player 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/scoreP1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginEnd="8dp" android:textAlignment="center"/>
    <TextView
            android:text="Player 2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/scoreP2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>